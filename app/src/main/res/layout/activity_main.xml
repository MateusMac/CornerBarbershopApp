<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fundo_corner"
    tools:context=".ativities.MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/glHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/glHome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.328" />

    <ImageView
        android:id="@+id/imgIconesHome"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/desc_logo"
        app:layout_constraintBottom_toTopOf="@+id/glHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        app:srcCompat="@drawable/img_icones_corner" />

    <ImageView
        android:id="@+id/imgPortfolioHome"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/txt_portfolio"
        android:focusable="true"
        android:onClick="abrirPortfolio"
        app:layout_constraintBottom_toTopOf="@+id/glHome"
        app:layout_constraintEnd_toStartOf="@+id/glHome2"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIconesHome"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/ic_album_42dp" />

    <TextView
        android:id="@+id/tvPortfolioHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:background="@color/colorTransGrey"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="serif"
        android:onClick="abrirPortfolio"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="@string/txt_portfolio"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPortfolioHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/glHome2"
        app:layout_constraintTop_toTopOf="@+id/imgPortfolioHome" />

    <ImageView
        android:id="@+id/imgAgendaHome"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="@string/nav_agenda"
        android:focusable="true"
        android:onClick="abrirAgenda"
        app:layout_constraintEnd_toStartOf="@+id/glHome2"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPortfolioHome"
        app:srcCompat="@drawable/ic_calendario_52dp" />

    <TextView
        android:id="@+id/tvAgendaHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:background="@color/colorTransGrey"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="serif"
        android:onClick="abrirAgenda"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="@string/nav_agenda"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgAgendaHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/glHome2"
        app:layout_constraintTop_toTopOf="@+id/imgAgendaHome" />

    <ImageView
        android:id="@+id/imgFidelidadeHome"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="@string/nav_fidelidade"
        android:focusable="true"
        android:onClick="abrirFidelidade"
        app:layout_constraintEnd_toStartOf="@+id/glHome2"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAgendaHome"
        app:srcCompat="@drawable/ic_hands_52dp" />

    <TextView
        android:id="@+id/tvFidelidadeHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="45dp"
        android:background="@color/colorTransGrey"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="serif"
        android:onClick="abrirFidelidade"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="@string/nav_fidelidade"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgFidelidadeHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/glHome2"
        app:layout_constraintTop_toTopOf="@+id/imgFidelidadeHome" />

</android.support.constraint.ConstraintLayout>